<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div layout="column">
  <md-input-container>
    <%= f.label :account %><br />
    <%= f.text_field :account, autofocus: true %>
  </md-input-container>

  <md-input-container>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </md-input-container>

  <% if false && devise_mapping.rememberable? -%>
    <md-input-container>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </md-input-container>
  <% end -%>
  <%= f.ng_submit %>
</div>

<% end %>

<%= render "devise/shared/links" %>